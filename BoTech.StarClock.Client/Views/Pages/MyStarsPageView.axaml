<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:CherylUI.Controls;assembly=CherylUI"
             xmlns:glassMorphism="clr-namespace:CherylUI.Controls.GlassMorphism;assembly=CherylUI"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:vm="clr-namespace:BoTech.StarClock.Client.ViewModels.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BoTech.StarClock.Client.Views.Pages.MyStarsPageView"
             x:DataType="vm:MyStarsPageViewModel">
    <Design.DataContext>
        <vm:MyStarsPageViewModel/>
    </Design.DataContext>
    <controls:SliverPage Header="Your Stars">
        <RelativePanel>
            <ItemsControl ItemsSource="{Binding Devices}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:DeviceInfoViewModel">
                        <glassMorphism:GlassCard Margin="0,8">
                            <WrapPanel Orientation="Horizontal" >
                                <avalonia:MaterialIcon Kind="Star"
                                                       Foreground="Gold"
                                                       Width="32"
                                                       Height="32"
                                />
                                <StackPanel Orientation="Vertical"
                                            Margin="5,0,0,0">
                                    <TextBlock FontSize="20"
                                               FontWeight="Bold"
                                               Text="{Binding DeviceName}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <avalonia:MaterialIcon Kind="CircleMedium"
                                                               Foreground="{Binding StatusColor}"/>
                                        <TextBlock Text="{Binding StatusInfo}"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button Classes="Text"
                                        Margin="15,0,0,0"
                                        Command="{Binding MoreInfoCommand}">
                                    <avalonia:MaterialIcon Kind="ChevronRight"
                                                           Foreground="#0A59F7"
                                                           Width="24"
                                                           Height="24"/>
                                </Button>
                            </WrapPanel>
                        </glassMorphism:GlassCard>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Classes="Small"
                    Command="{Binding AddNewDeviceCommand}"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.Below="StarsList">
                <avalonia:MaterialIcon Kind="StarPlus"
                                       Width="18"
                                       Height="18"
                                       Foreground="White"/>
            </Button>
        </RelativePanel>
    </controls:SliverPage>
</UserControl>
